<div className='bg-bg-wiz flex flex-col justify-center pt-14 xl:pt-[180px] md:pt-[80px]'>
    <div className='block m-auto mb-16 font-montserrat'>
        <h1 className='text-[60px] text-black text-left font-medium'>HotelWiz</h1>
        <h5 className='text-primary text-xl text-right mr-[-20px] font-medium'>Admin</h5>
    </div>
    <div className='block m-auto '>
        <form method="post" class="font-Roboto w-[300px]">
            @Html.AntiForgeryToken()
            <h2>Login.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="error-msg"></div>
            <div class="mb-4" style="margin:10px">
                <input asp-for="LoginModel.UserName" class="form-control" autocomplete="Email" aria-required="true" />
                <label asp-for="LoginModel.UserName" class="form-label"></label>
                <span asp-validation-for="LoginModel.UserName" class="text-danger"></span>
            </div>
            <div class="" style="margin:10px">
                <input asp-for="LoginModel.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="LoginModel.Password" class="form-label"></label>
                <span asp-validation-for="LoginModel.Password" class="text-danger"></span>
            </div>
            <div class="my-5" style="margin:10px">
                <button id="login-submit"
                        type="submit"
                        class="px-6 py-2 bg-primary hover:bg-primarywiz-600 transition-all duration-300 text-center w-full rounded-[5px] text-white text-base font-medium">
                    Login
                </button>
            </div>
        </form>
        <div className='flex justify-between items-center'>
            <div className='flex justify-start items-center text-[#232130] opacity-50'>
                <input type='checkbox' name='remember' className='h-5 w-5 mr-[2px]' />
                <h5 className='text-xs'>Recordarme</h5>
            </div>
            <div className='text-right'>
                <a href={'/recuperar-contraseña'} className='text-[#232130] opacity-50 text-xs'>
                    ¿Olvidaste tu contraseña?
                </a>
            </div>
        </div>
    </div>
</div>
